{% extends 'base.html.twig' %}

{% block title %}Hello MenuController!{% endblock %}

{% block body %}

    {% for category in categorys %}
    <h2 class="title-carte">{{ category.name }}</h2>
    <ul>
        {% for dish in category.dishes %}
        <li class="li-carte">{{ dish.title }} - {{ dish.price }} €</li>
        {% endfor %}
    </ul>
    {% endfor %}
    <button class="btn-reservation">
		<a href="{{path('reservation')}}">Réservation</a>
	</button>
{% endblock %}
